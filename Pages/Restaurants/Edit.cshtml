@page "{Id:int?}"
@model RestaurantAdvisor.Pages.Restaurants.EditModel
@{
    ViewData["Title"] = "Edit Restaurant";
}

<h1>@Model.restaurant.Name</h1>

<form method="post">
    <input type="hidden" asp-for="@Model.restaurant.Id" />

    <div class="form-group">
        <label>Name</label>
        <br />
        <input type="text" class="form-control" asp-for="restaurant.Name" />
    </div>

    <div class="form-group">
        <label>Location</label>
        <br />
        <input type="text" class="form-control" asp-for="restaurant.Location" />
    </div>

    <div class="form-group">
        <label>Cuisine</label>
        <br />
        <select class="form-control" asp-for="restaurant.Cuisine" asp-items="Model.Cuisines">

        </select>
    </div>

    <button type="submit" class=" btn btn-outline-success">Save</button>
    <a asp-page="./List" class="btn btn-outline-danger">Back to List</a>

</form>