@using RestaurantAdvisor.Core
@model Restaurant

<div class="panel panel-paimary">
    <div class="panel-heading">
        <h3>@Model.Name</h3>

    </div>
    <div class="panel-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="panel-footer">
        <a asp-page="./Detail" asp-route-id="@Model.Id" class="btn btn-outline-info"><i class="fas fa-info-circle"></i></a>
        <a asp-page="./Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger"><i class="fas fa-trash-alt"></i></a>
    </div>
</div>